# RedOps-AI Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI Provider Configuration
# =============================================================================

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=2000

# Anthropic Configuration (Alternative to OpenAI)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.1
ANTHROPIC_MAX_TOKENS=2000

# =============================================================================
# Application Configuration
# =============================================================================

# Environment settings
REDOPS_ENVIRONMENT=development
REDOPS_DEBUG=true
REDOPS_LOG_LEVEL=INFO

# Configuration file path (optional)
REDOPS_CONFIG_PATH=config/config.yaml

# =============================================================================
# Tool Configuration
# =============================================================================

# Nmap configuration
NMAP_PATH=/usr/bin/nmap
NMAP_TIMEOUT=300

# =============================================================================
# Scanning Configuration
# =============================================================================

# Default scanning settings
DEFAULT_PORTS=1-1000
DEFAULT_TIMING=3
MAX_CONCURRENT_SCANS=10

# =============================================================================
# Output Configuration
# =============================================================================

# Output directories
OUTPUT_DIR=results
LOG_DIR=logs
REPORT_DIR=reports

# =============================================================================
# Security Configuration
# =============================================================================

# Rate limiting
API_RATE_LIMIT=60
SCAN_RATE_LIMIT=10

# Timeouts (in seconds)
HTTP_TIMEOUT=30
SCAN_TIMEOUT=600
AI_REQUEST_TIMEOUT=120

# =============================================================================
# Advanced Configuration
# =============================================================================

# Database configuration (if using database storage)
# DATABASE_URL=sqlite:///redops.db

# Redis configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379/0

# Webhook configuration (for notifications)
# WEBHOOK_URL=https://your-webhook-url.com/notify

# =============================================================================
# Development Configuration
# =============================================================================

# Development settings (only for development environment)
DEV_MOCK_AI=false
DEV_MOCK_NMAP=false
DEV_VERBOSE